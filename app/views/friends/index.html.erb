

<% if user_signed_in? %>
<h1>Friends List</h1>

<table class="table table-info table-striped table-bordered table-hover">
  <thead>
    <tr class="table-info">

      <th>name</th>
      
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      
      
    </tr>
  </thead>

  
    <% @friends.each do |friend| %>
    <% if friend.user == current_user%>
      <tr>
        <td class="table-info">
          <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
        <td class="table-info"><%= friend.email %></td>
        <td class="table-info"><%= friend.phone %></td>
        <td class="table-info"><%= friend.twitter%></td>
       
       
      </tr>
      <% end %>
    <% end %>
  </tbody>

</table>


<br>


<%= link_to 'New Friend', new_friend_path, class:"btn btn-outline-info"%>
<% else %>

<div class="card bg-dark text-white">
  <img src="/images/king.jpg" class="card-img" alt="...">
  <div class="card-img-overlay">
    <h1 class="card-title">Friends List</h1>
    <h4 class="card-text">Everybody has friends. Sign up or Log in</h4>
    
  </div>
</div>


<% end %>

